NODE_ENV=development
PORT=3000
METRICS_PORT=9090

# Database
DB_HOST=localhost
DB_USER=seu_usuario
DB_PASSWORD=sua_senha
DB_NAME=financial_management
DB_PORT=3306
DB_CONNECTION_LIMIT=10

# JWT
JWT_SECRET=seu_secret_muito_seguro
JWT_EXPIRES_IN=24h

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=sua_senha_redis
REDIS_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=3600000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# Email (para recuperação de senha)
SMTP_HOST=smtp.exemplo.com
SMTP_PORT=587
SMTP_USER=seu_email@exemplo.com
SMTP_PASS=sua_senha_smtp

# Sentry (opcional)
SENTRY_DSN=seu_dsn_do_sentry

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Métricas
ENABLE_METRICS=true

# Backup
BACKUP_ENABLED=true
BACKUP_CRON="0 0 * * *"
BACKUP_PATH=./backups 

# Análise Preditiva
ENABLE_PREDICTIVE_ANALYSIS=true
ANOMALY_DETECTION_THRESHOLD=0.8

# Conciliação Bancária
BANK_FILES_PATH=./bank_files
REM_PATTERN=^[A-Z]{3}\d{6}\.REM$
RET_PATTERN=^[A-Z]{3}\d{6}\.RET$

# Slack (para notificações)
SLACK_TOKEN=seu_token_do_slack
SLACK_CHANNEL=seu_canal_do_slack